    <com.gary.blog.Wedgit.CubeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cube_layout">


        <com.gary.blog.Wedgit.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/post_info"
            CubeLayoutParams:group="1">

            <TextView
                android:id="@+id/followed_subject"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="nothing..."
                android:textColor="@color/colorPrimary"
                android:textSize="26sp" />

            <GridLayout
                android:rowCount="3"
                android:columnCount="3"
                android:layout_below="@id/post_subject"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="12dp"
                android:id="@+id/imgs_layout"
                android:visibility="gone">

            </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/video_layout"
                android:layout_margin="12dp"
                android:visibility="gone">

                <include
                    layout="@layout/simple_player_view_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right|bottom"
                android:layout_gravity="right|bottom"
                android:id="@+id/like_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textSize="18sp"
                    android:id="@+id/like_sum"
                    android:text=""/>

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/like_state"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="4dp"
                    app:allow_random_color="true"
                    app:btn_color="@color/gray_btn_bg_color"
                    app:btn_fill_color="@color/red_btn_bg_color"
                    app:enable_flashing="true"
                    android:visibility="gone"
                    app:shine_turn_angle="20"
                    app:siShape="@raw/like" />

            </LinearLayout>

        </com.gary.blog.Wedgit.MyLinearLayout>


        <com.gary.blog.Wedgit.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/poster_info"
            CubeLayoutParams:group="1">

            <com.gary.blog.Wedgit.CircleImage
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_icon"
                android:layout_gravity="center"
                android:layout_margin="36dp"
                android:id="@+id/followed_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:id="@+id/followed_username"
                android:layout_gravity="center"
                android:gravity="center" />
        </com.gary.blog.Wedgit.MyLinearLayout>

        <com.gary.blog.Wedgit.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/comment_info"
            CubeLayoutParams:group="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/comment"/>

        </com.gary.blog.Wedgit.MyLinearLayout>

    </com.gary.blog.Wedgit.CubeLayout>


